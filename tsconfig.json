{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "trashbin/switchButtons.ts",
    "trashbin/pinnedSetup.ts",
    "trashbin/switchListener.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
